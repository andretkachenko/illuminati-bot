{
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"outDir": "build",
		"rootDir": "src",
		"moduleResolution": "node",
		"declaration": false,
		"strict": true,
		"sourceMap": true,
		"noImplicitAny": true,
		"alwaysStrict": true,
		"typeRoots": [
            "./node_modules/@types"
        ]
	},
	"exclude": [
		"./node_modules/*",
	],
	"include": [
		"./src/**/*.ts"
	]
}